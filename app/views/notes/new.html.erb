<h3>Создание новой записи</h3>
<%= form_for :note, url: notes_path do |f| %>
    <% if @note.errors.any? %>
        <% @note.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger"><%= msg %></div>
        <% end %>
    <% end %>
    <p>Дата или название<br><%= f.text_field(:title, {:class => 'form-control'}) %></p>
    <p>События<br><%= f.text_area(:body, {:class => 'form-control'}) %></p>
    <p> <%= f.submit("Добавить в дневник",{:class => 'btn btn-success'}) %></p>
<% end %>